# -*- encoding: utf-8 -*-
$:.push File.expand_path("../lib", __FILE__)

Gem::Specification.new do |s|
  s.name        = "<%= gem_name %>"
  s.version     = "<%= gem_version %>"
  s.authors     = ["geemus (Wesley Beary)"]
  s.email       = ["wesley@heroku.com"]
  s.homepage    = "http://github.com/heroku/heroku.rb"
  s.summary     = %q{Ruby client for the Heroku API}
  s.description = %q{Manage your Heroku account, apps and addons with this Ruby library.}

  s.files         = `find .`.split("\n")
  s.require_paths = ["lib"]

  s.add_runtime_dependency 'excon', '~>0.20.0'
end